@model NTBrokers.Models.Brokers.AddApartmentModel

<table class="table">
    <thead>
        <tr>
            <th scope="col">City</th>
            <th scope="col">Street</th>
            <th scope="col">Address</th>
            <th scope="col">Flat Floor</th>
            <th scope="col">Building Floors</th>
            <th scope="col">Area</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Apartments)
        {
        <tr>
            <td>@item.City</td>
            <td>@item.Street</td>
            <td>@item.Address</td>
            <td>@item.FlatFloor</td>
            <td>@item.BuildingFloors</td>
            <td>@item.Area</td>
            <td>@Html.ActionLink("Add", "SubmitApartment", new { brokerId = Model.BrokerId, apartmentId = item.Id })</td>
        </tr>
        }
    </tbody>
</table>