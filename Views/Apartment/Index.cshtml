@model List<NTBrokers.Models.Apartments.ApartmentModel>

    <a asp-controller="Apartment"
       asp-action="Create">Add Apartment</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Apartment</th>
            <th scope="col">Company</th>
            <th scope="col">Broker</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Street @item.Address</td>
            <td>@Html.ActionLink($"{@item.CompanyName}", "CompanyBrokers", "Company", new { companyId = item.CompanyId })</td>
            <td>@Html.ActionLink($"{@item.Name}" + $" {@item.Surname}", "BrokerApartments", "Broker", new { brokerId = item.BrokerId })</td>
        </tr>
        }
    </tbody>
</table>